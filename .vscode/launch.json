{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Number Helper Service",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/numberhelper/src/number_helper_service.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {},
      "args": ["--host", "localhost", "--port", "8001"],
      "python": "${workspaceFolder}/.venv/bin/python",
      "justMyCode": true
    },
    {
      "name": "Node: Backend (build & run)",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}/backend",
      "console": "integratedTerminal",
      "runtimeExecutable": "node",
      "program": "${workspaceFolder}/backend/dist/main.js",
      "preLaunchTask": "npm: build",
      "skipFiles": ["<node_internals>/**"],
      "outFiles": ["${workspaceFolder}/backend/dist/**/*.js"],
      "presentation": {
        "group": "backend",
        "order": 1
      }
    }
  ]
}
