{
  "name": "ts-py-backend",
  "version": "0.1.0",
  "private": true,
  "description": "Node.js (TypeScript) backend that coordinates with a Python FastAPI helper service for heavy computations.",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
